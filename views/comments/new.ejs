<% include ../partials/header %>
<div class="container">
    <div class="row">
<h1 style="text-align: center;">Add new comment to <%= note.Name %></h1>
<div style="width: 50%;margin: 25px auto;">
    <form action="/notes/<%= note._id %>/comments" method="POST">
        <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div> 
        <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
<a href="/notes">Go back</a>
</div>
</div>
</div>
<% include ../partials/footer %>
