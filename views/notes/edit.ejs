<% include ../partials/header %>
<div class="container">
    <div class="row">
<h1 style="text-align: center;">Edit <%= note.Name %></h1>
<div style="width: 50%;margin: 25px auto;">
    <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
        <div class="form-group">
        <label>Note Title</label>
        <input class="form-control" type="text" name="note[Name]" value="<%= note.Name %>" disabled>
        </div>
        <div class="form-group">
        <label>Note Images</label>
        <input class="form-control" type="text" name="note[image]" value="<%= note.image %>"> 
        </div> 
        <div class="form-group">
        <label>Note Content</label>
        <textarea class="form-control" rows="3" name="note[desc]"><%= note.desc %></textarea>
        </div> 
        <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
<a href="/notes/<%= note._id %>">Go back</a>
</div>
</div>
</div>
<% include ../partials/footer %>