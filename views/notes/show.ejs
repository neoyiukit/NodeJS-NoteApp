<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Note Versions</p>
            <div class="list-group">
                <a class="list-group-item active" href="/notes/<%= note._id %>">Version 1</a>
                <a class="list-group-item" href="/notes/<%= note._id %>">Version 2</a>
                <a class="list-group-item" href="/notes/<%= note._id %>">Version 3</a>
            </div>
                <form class="pull-right" id="delete" action="/notes/<%= note._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-lg">Delete</button>
                </form>
                <a class="btn btn-warning btn-lg" href="/notes/<%= note._id %>/edit">Edit the Note</a>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= note.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">23,334 views</h4>
                    <h4><a><%= note.Name %></a></h4>
                    <p><%= note.desc %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/notes/<%= note._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% note.comments.forEach(function(comment){ %>
                     <div class="row">
                         <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                             <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                         </div>
                     </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>